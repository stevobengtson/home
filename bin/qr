#!/bin/bash

case $1 in
  "server")
    zeus server Puma -b 0.0.0.0 -p 3000 -e development
    ;;
  "console")
    zeus console
    ;;
  "test")
    TEST_FILE="test/**/*_test.rb"
    TEST_NAME=""
    [[ -z "$2" ]] || TEST_FILE=$2
    [[ -z "$3" ]] || TEST_NAME=$3
    [[ -z "$2" ]] || rubocop $2
    ruby -I"lib:test" $TEST_FILE $TEST_NAME
    ;;
  "update")
    git fetch --prune && git pull origin develop 
    ;;
  "guard")
    bundle exec guard
    ;;
  *)
    echo "Please choose something to do."
    ;;
esac

